<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        <link rel="icon" href="{{ asset('favicon.png')}}">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        {% block stylesheets %}
            {% set assetUrls = asset('entrypoint.app.json') | file_content | json_decode %}
            {% for css in assetUrls.cssFiles %}
                <link rel="stylesheet" href="{{ asset(css) }}">
            {% endfor %}
        {% endblock %}

        {% block javascripts %}
{% block importmap %}{{ importmap('app') }}{% endblock %}
            {% set assetUrls = asset('entrypoint.app.json') | file_content | json_decode %}
            {% for js in assetUrls.jsFiles %}
                <script src="{{ asset(js) }}"></script>
            {% endfor %}
        {% endblock %}
    </head>
    <body>
    <div class="bg"></div>
    <div class="bg bg2"></div>
    <div class="bg bg3"></div>
        <div class="container">
            <nav class="navbar navbar-expand-lg m-3 navborder fixed-top">
                <div class="container-fluid">
                    <div class="d-flex">
                        <p class="h3 golden me-3">Nowak Louis</p>
                        <div class=" icon-perso">
                            <a class="navbar-brand" href="https://github.com/nowaklouis" target="_blank"><i class="bi bi-github" style="font-size: 25px; color: rgb(254, 180, 0);"></i></a>
                        </div>
                        <div class=" icon-perso">
                            <a class="navbar-brand" href="https://www.linkedin.com/in/louis-nowak/" target="_blank"><i class="bi bi-linkedin" style="font-size: 25px; color: rgb(254, 180, 0);"></i></a>
                        </div>
                    </div>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav nav-pills ms-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                            <a class="nav-link text-white btn" data-target="presentation"><strong>Présentation</strong></a>
                            </li>
                            <li class="nav-item">
                            <a class="nav-link text-white btn" data-target="competences"><strong>Compétences</strong></a>
                            </li>
                            <li class="nav-item">
                            <a class="nav-link text-white btn" data-target="projets"><strong>Projets</strong></a>
                            </li>
                            <li class="nav-item">
                            <a class="nav-link text-white btn" data-target="contact"><strong>Contact</strong></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
        {% block body %}{% endblock %}
        <footer class="footer">
            <div class="container">
                <div class="d-flex justify-content-end">
                    <div class="row pt-1">
                        <p class="text-white">&copy; 2024 - Nowak Louis</p>
                    </div>
                </div>
            </div>
        </footer>
    </body>
</html>
