{% extends 'base.html.twig' %}
{% import "macros.html.twig" as macros %}

{% block title %}Contact{% endblock %}

{% block body %}
<div class="container">
    <div class="d-flex justify-content-center">
        <div class="card mb-3 mx-2 p-1 cardpresent shadow p-3 mb-5 rounded" style="max-width: 500px;">
            {{ form_start(form) }}
                <div>
                    {{ form_errors(form) }}
                </div>

                <div class="row">
                    {{ form_row(form.email) }}
                    {{ form_row(form.sujet) }}
                </div>
                <div class="row">
                    {{ form_row(form.message) }}
                </div>
                <div class="d-flex justify-content-center pt-3">
                    <button type="submit" class="btn btn-warning">Valider</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}